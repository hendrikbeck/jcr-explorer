<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN" "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
	<application>
		<locale-config>
			<default-locale>en_EN</default-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>ContentBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.ContentBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>EximBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.module.exim.ExportImportBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contentBean</property-name>
			<value>#{ContentBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>InformationBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.module.information.InformationBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contentBean</property-name>
			<value>#{ContentBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>QueryBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.module.query.QueryBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contentBean</property-name>
			<value>#{ContentBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>ObservationBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.module.observation.ObservationBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contentBean</property-name>
			<value>#{ContentBean}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>goToMainPage</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToContentPanel</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToQuery</from-outcome>
			<to-view-id>/query.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToObservationConsole</from-outcome>
			<to-view-id>/observationConsole.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToLogin</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToInformation</from-outcome>
			<to-view-id>/information.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToWorkspaceAdministration</from-outcome>
			<to-view-id>/workspaceAdministration.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/addReferenceProperty.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/addReferenceProperty.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/importData.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/importData.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/contentAuthoring.jsp</from-view-id>
		<navigation-case>
			<from-outcome>deleteProperty</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>changeCurrentNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reopenRepository</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>saveToRepository</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>up</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addProperty</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addReferenceProperty</from-outcome>
			<to-view-id>/addReferenceProperty.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>removeNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>removeProperty</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>moveNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToAddress</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>submit</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToArticleimages</from-outcome>
			<to-view-id>/articleImages.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>systemPropertySet</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>copyNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>deleteNode</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToExportResults</from-outcome>
			<to-view-id>/exportResults.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>importData</from-outcome>
			<to-view-id>/importData.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>mixinNodeTypeAdded</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>mixinNodeTypeRemoved</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/observationConsole.jsp</from-view-id>
		<navigation-case>
			<from-outcome>refresh</from-outcome>
			<to-view-id>/observationConsole.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<validator-id>NamePropertyValidator</validator-id>
		<validator-class>
			org.jcrexplorer.validator.NamePropertyTypeValidator
		</validator-class>
	</validator>
	<validator>
		<validator-id>PathPropertyValidator</validator-id>
		<validator-class>
			org.jcrexplorer.validator.PathPropertyTypeValidator
		</validator-class>
	</validator>
	<managed-bean>
		<managed-bean-name>LoginBean</managed-bean-name>
		<managed-bean-class>
			org.jcrexplorer.login.LoginBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contentBean</property-name>
			<value>#{ContentBean}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/contentAuthoring.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/query.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/query.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/query.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<lifecycle>
		<phase-listener>
			org.jcrexplorer.login.LoginListener
		</phase-listener>
	</lifecycle>
	<converter>
		<converter-id>DateTimeConverter</converter-id>
		<converter-class>
			org.jcrexplorer.jsf.converter.DateTimeConverter
		</converter-class>
	</converter>
</faces-config>
